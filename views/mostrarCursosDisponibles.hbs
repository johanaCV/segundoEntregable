{{>header}}

<h1>Cursos Disponibles</h1>

{{#if cursos}}

<div class="bs-example">
    <div class="accordion" id="accordionExample">
		{{#each cursos}}
			<div class="card">
				<div class="card-header" id="heading{{this.id}}">
					<h2 class="mb-0">
						<button type="button" class="btn btn-link" data-toggle="collapse" data-target="#collapse{{this.id}}">ID: {{this.id}} <br> Nombre: {{this.nombre}} <br> Valor: {{this.valor}} </button>
					</h2>
				</div>
				<div id="collapse{{this.id}}" class="collapse" aria-labelledby="heading{{this.id}}" data-parent="#accordionExample">
					<div class="card-body">
						<p>
							Descripci√≥n: {{this.descripcion}}<br>
							Modalidad: {{this.modalidad}}<br>
							Intensidad: {{this.intensidad}}<br>
						</p>
					</div>
				</div>
			</div>
		{{/each}}
	</div>
</div>

{{else}}
	
	<p>No hay cursos disponibles</p>

{{/if}}

{{>footer}}